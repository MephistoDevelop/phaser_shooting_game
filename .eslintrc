{
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015,
    "import/extensions": "off",
    "import/no-unresolved": "o"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/resolver": 2,
    "no-global-assign": [
      "error",
      {
        "exceptions": [
          "Object"
        ]
      }
    ]
  }
}