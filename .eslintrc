{
  "settings": {
    "import/resolver": "webpack"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015,
    "import/extensions": "off",
    "import/no-unresolved": "off"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/resolver": 2,
    "no-global-assign": [
      "error",
      {
        "exceptions": [
          "Object"
        ]
      }
    ]
  }
}